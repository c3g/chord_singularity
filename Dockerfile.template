FROM debian:buster-slim

# Author: David Lougheed <david.lougheed@mail.mcgill.ca>

ENV CHORD_DOCKER_BUILD 1
ENV PYTHONUNBUFFERED 1

RUN mkdir /chord/
WORKDIR /chord/

ADD __BENTO_SERVICES_JSON /chord/chord_services.json
ADD __BENTO_SERVICES_JSON_SCHEMA /chord/chord_services.schema.json
ADD __BENTO_CONTAINER_SCRIPTS /chord/container_scripts
ADD __BENTO_CONTAINER_TOOLS /chord/chord_container_tools
ADD __BENTO_LICENSE /chord/LICENSE
ADD __BENTO_README /chord/README.md

RUN /bin/bash /chord/container_scripts/post_script.bash

CMD ["/bin/bash", "/chord/container_scripts/start_script.bash"]
