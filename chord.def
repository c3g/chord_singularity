Bootstrap: docker
From: python:3.7-slim-stretch

%environment
    export LANG=en_US.UTF-8
    export LC_CTYPE=en_US.UTF-8

%files
    chord_services.json /chord/chord_services.json
    chord_services.schema.json /chord/chord_services.schema.json
    container_scripts /chord/container_scripts
    LICENSE /chord/LICENSE
    README.rst /chord/README.rst
    requirements.txt /chord/requirements.txt

%post
    exec bash /chord/container_scripts/post_script.bash

%startscript
    exec bash /chord/container_scripts/start_script.bash

%labels
    Author David Lougheed
