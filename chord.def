Bootstrap: docker
From: debian:buster-slim

%environment
    export LANG=en_US.UTF-8
    export LC_CTYPE=en_US.UTF-8

%files
    chord_services.json /chord/chord_services.json
    chord_services.schema.json /chord/chord_services.schema.json
    container_scripts /chord/container_scripts
    chord_container_tools /chord/chord_container_tools
    LICENSE /chord/LICENSE
    README.md /chord/README.md

%post
    exec /bin/bash /chord/container_scripts/post_script.bash

%startscript
    exec /bin/bash /chord/container_scripts/start_script.bash

%labels
    Author David Lougheed
