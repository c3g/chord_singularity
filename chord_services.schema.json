{
  "$id": "https://github.com/davidlougheed/chord_server/blob/master/chord_services.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chord Services File",
  "description": "Schema defining chord_services.json, which manages CHORD services within a Singularity container.",
  "type": "array",
  "items": {
    "$ref": "#/definitions/chord_service"
  },
  "definitions": {
    "chord_service": {
      "type": "object",
      "required": [],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z\\-_][a-zA-Z0-9\\-_]*$"
        },
        "type": {
          "type": "string",
          "enum": ["data", "other"]
        },
        "repository": {
          "type": "string"
        },
        "internal_port": {
          "type": "integer",
          "minimum": 1024
        },
        "apt_dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[^\\s\\\\/]$"
          }
        },
        "python_module": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]+$"
        },
        "python_callable": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "python_args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
