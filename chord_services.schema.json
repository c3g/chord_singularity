{
  "$id": "https://raw.githubusercontent.com/c3g/chord_singularity/master/chord_services.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CHORD Services File",
  "description": "Schema defining chord_services.json, which manages CHORD services within a Singularity container.",
  "type": "array",
  "items": {
    "$ref": "#/definitions/chord_service"
  },
  "definitions": {
    "chord_service": {
      "type": "object",
      "required": ["type", "repository", "wsgi"],
      "oneOf": [{
        "properties": {
          "data_service": {"const": true}
        },
        "required": ["data_service", "manageable_tables"]
      }, {
        "properties": {
          "data_service": {"const": false},
          "manageable_tables": {"type": "null"}
        },
        "required": ["data_service"]
      }],
      "properties": {
        "type": {
          "type": "object",
          "properties": {
            "organization": {
              "type":  "string",
              "pattern": "^[a-zA-Z\\-_][a-zA-Z0-9\\-_](\\.[a-zA-Z\\-_][a-zA-Z0-9\\-_]*)+$"
            },
            "artifact": {
              "type": "string",
              "pattern": "^[a-zA-Z][a-zA-Z0-9\\-_]*$"
            },
            "language": {
              "type": "string",
              "enum": ["python", "javascript"]
            }
          },
          "required": ["organization", "artifact", "language"],
          "additionalProperties": false
        },
        "repository": {
          "type": "string"
        },
        "data_service": {
          "type":  "boolean"
        },
        "manageable_tables": {
          "type": "boolean"
        },
        "apt_dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[^\\s\\\\/]+$"
          }
        },
        "pre_install_commands": {
          "type": "array",
          "items": {"type":  "string"}
        },
        "pre_start_commands": {
          "type": "array",
          "items": {"type":  "string"}
        },
        "post_stop_commands": {
          "type": "array",
          "items": {"type": "string"}
        },
        "wsgi": {
          "type": "boolean"
        },
        "service_runnable": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9\\-_.]+$"
        },
        "python_module": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_.]+$"
        },
        "python_callable": {
          "type": "string",
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "python_args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "run_environment": {
          "type": "object",
          "patternProperties": {
            "^[A-Z_]+$": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
